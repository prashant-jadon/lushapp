<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".fragementsForMainScreen.InternetChatFragment">

    <TextView
        android:id="@+id/profileStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="6dp"
        android:fontFamily="@font/amikoregular"
        android:text="Your profile stats"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />



        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/timeLeftString1"
            android:layout_below="@id/profileStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are left with "
            android:textSize="24dp"
            android:fontFamily="@font/amikoregular"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/timeleft"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_below="@id/timeLeftString1"
            android:textSize="30dp"
            android:fontFamily="@font/amikobold"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/timeLeftString2"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text=" mins with each chat"
            android:layout_below="@id/timeleft"
            android:textSize="24dp"
            android:fontFamily="@font/amikoregular"
            android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/interest"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Interest"
        android:layout_below="@id/timeLeftString2"
        android:textSize="24dp"
        android:fontFamily="@font/amikoregular"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile"
        android:layout_below="@id/interest"
        android:background="@drawable/circle_background"
        android:elevation="6dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/username"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="John Doe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/amikoregular"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amikoregular"
        android:text="Traveler | Coder | Photographer"
        android:textSize="16sp"
        android:textColor="@color/lavender" />

    <LinearLayout
        android:id="@+id/secondMidLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/bio"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rating"
            android:fontFamily="@font/amikobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥"
            android:textSize="30dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/startChatting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START CHATTING"
        android:fontFamily="@font/amikobold"
        android:layout_marginTop="20dp"
        android:layout_below="@id/secondMidLayout"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
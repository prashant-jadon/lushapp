<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">

    <!-- User Image -->
    <ImageView
        android:id="@+id/user_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile"
        android:background="@drawable/circle_background"
        android:elevation="6dp"
        android:scaleType="centerCrop" />

    <!-- Settings Button -->

    <!-- Username -->

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:src="@drawable/settingicon" />

    <TextView
        android:id="@+id/username"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="John Doe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/amikoregular"
        android:textColor="@android:color/black" />

    <!-- Bio -->
    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amikoregular"
        android:text="Traveler | Coder | Photographer"
        android:textSize="16sp"
        android:textColor="@color/lavender" />

    <!-- Interest -->
    <TextView
        android:id="@+id/interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amikoregular"
        android:text="Interests: Hiking, Coding"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <!-- Gender and Email Row -->
    <LinearLayout
        android:id="@+id/midLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/interest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- Gender -->
        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:fontFamily="@font/amikoregular"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:background="@android:color/darker_gray" />

        <!-- Email -->
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="johndoe@example.com"
            android:fontFamily="@font/amikoregular"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Rating with Icon -->
    <LinearLayout
        android:id="@+id/secondMidLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/midLayout"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rating"
            android:fontFamily="@font/amikobold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥"
            android:textSize="30dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Image Grid -->
    <LinearLayout
        android:id="@+id/image_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/secondMidLayout"
        android:layout_marginTop="24dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/image1"
            android:elevation="6dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/image2"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:elevation="6dp"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/image3"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:elevation="6dp"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/profile" />
    </LinearLayout>

    <!-- Image Grid -->
    <LinearLayout
        android:id="@+id/image_grid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/image_grid"
        android:layout_marginTop="24dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/image4"
            android:elevation="6dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/image5"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:elevation="6dp"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/image6"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:elevation="6dp"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/profile" />
    </LinearLayout>


   <RelativeLayout
       android:layout_width="wrap_content"
       android:gravity="center"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:layout_below="@id/image_grid2"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/timeLeftString1"
           android:layout_width="wrap_content"

           android:layout_height="wrap_content"
           android:text="You are left with "
           android:textSize="17dp"
           android:fontFamily="@font/amikoregular"
           android:textColor="@color/blue"/>

       <TextView
           android:id="@+id/timeleft"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="10"
           android:layout_toRightOf="@id/timeLeftString1"
           android:textSize="17dp"
           android:fontFamily="@font/amikobold"
           android:textColor="@color/blue"/>

       <TextView
           android:id="@+id/timeLeftString2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=" mins with each chat"
           android:layout_toRightOf="@id/timeleft"
           android:textSize="17dp"
           android:fontFamily="@font/amikoregular"
           android:textColor="@color/blue"/>
   </RelativeLayout>

    <!-- Edit Button (Floating) -->
    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/editicon"
        app:backgroundTint="@color/white" />

</RelativeLayout>
